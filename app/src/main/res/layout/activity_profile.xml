<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:text="Profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/back_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="25dp"
            android:text="◀" />

        <TextView
            android:id="@+id/settings_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:layout_marginRight="16dp"
            android:text="Edit" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/profile_container">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/user_sample" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/name_profile_txt"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#222" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="150dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow android:layout_width="fill_parent">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:text="✉"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bhanuka1414@gmail.com"
                    android:id="@+id/email_profile_txt" />
            </TableRow>

            <TableRow android:layout_width="fill_parent">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:text="☏"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+94766651375"
                    android:id="@+id/phone_profile_txt" />
            </TableRow>

            <TableRow android:layout_width="fill_parent">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="14dp"
                    android:text="🏠"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="134 a, dodampe, ratnapura"
                    android:id="@+id/address_profile_txt" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/signin_layout_profile">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please sign in"
            android:layout_centerInParent="true"
            android:id="@+id/loginBtnProfile" />
    </RelativeLayout>


</LinearLayout>