<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/title_text_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:text="edit"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/back_button_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="25dp"
            android:text="◀" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/user_sample" />


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">

                <TableRow android:layout_width="fill_parent">

                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="14dp"
                        android:text="👤"
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:id="@+id/name_profile_etxt" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">

                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:text="✉"
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:textSize="50dp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bhanuka1414@gmail.com"
                        android:id="@+id/email_profile_etxt" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">

                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:text="☏"
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+94766651375"
                        android:id="@+id/phone_profile_etxt" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">

                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="14dp"
                        android:text="🏠"
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="134 a, dodampe, ratnapura"
                        android:id="@+id/address_profile_etxt" />
                </TableRow>
            </TableLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimary"
                android:text="Update"
                android:id="@+id/update_user_setings_btn" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>